<div class="user-city-change">
  <div>
    Are you not flying from <div class="current-user-city"><%= current_user.city %>?</div> </br>
    Where are you flying from today?
  </div>

  <%= form_for :user, url: user_path(current_user), method: :patch do |f|%>
    <%= f.collection_select :city, Category.all, :name, :name, { :prompt => "Choose Home City" }, { :class => "input-sm" } %>
    <%= f.submit "Update City", class: "btn btn-small btn-update" %>
  <% end %>
</div>
