<%= nav_bar fixed: :top, responsive: true do %>
  <div id="nav-row">
    <%= menu_group inline: true do %>
      <%= menu_item image_tag('logo.png', size: "55x55", id: "brand"), root_path  %></a>
      <%= menu_item "Plan", plan_path, class: "nav-link" if !(current_user && current_user.admin?) %>
      <%= menu_item "Explore", trips_path, class: "nav-link" if !(current_user && current_user.admin?) %>
      <%= menu_item "Admin Dashboard", admin_dashboard_path, id: "admin-dashboard" if current_user && current_user.admin? %>
    <% end %>

    <%= menu_group pull: :right do %>
      <% if current_user.nil? %>
        <%= menu_item "Signup", new_user_path, class: "nav-link" %>
        <%= menu_divider %>
        <%= menu_item do %>
          <%= form_for :session, url: login_path, :html => {class: 'navbar-form pull-right'} do |f| %>
            <%= f.text_field :username, :placeholder => 'username' %>
            <%= f.password_field :password, :placeholder => 'password' %>
            <%= f.submit 'Login' %>
          <% end %>
        <% end %>
      <% else %>
        <%= menu_item "Plans", user_orders_path(user_id: current_user.id), class: "nav-bar" %>
        <%= menu_item "Logout", logout_path, class: "nav-bar" %>
        <% unless current_user.admin? %>
          <%= menu_item "Profile", user_path(current_user), id: "profile" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
<% end %>
