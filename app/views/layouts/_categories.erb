<div class="row">
  <div class="text-center">

      <% @location_categories.each do |category| %>
        <div class="col-sm-3 trip-item">
          <%= link_to("#{category.name}", real_trips_path_by(category), class: "btn btn-primary traveler-type") %>
          <%= image_tag category.photos.first.avatar.url(:city)%>
        </div>
      <% end %>

  </div>
</div>
