<!DOCTYPE html>
<html>
<head>
  <title>FlyAwayFromHere</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="main-body container">
    <%= render "layouts/nav_bar" %>
    <% if plans.present? %>
      <div class="complete-plan">
        Finish Planning and
          <%= link_to "Fly Away.", plan_path, class: "plan-underline" %>
      </div>
    <% end %>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, :class => "flash-#{name}" %>
    <% end %>
    <%= yield %>
  </div>
  <%= render "layouts/footer_bar" %>
</body>
</html>
